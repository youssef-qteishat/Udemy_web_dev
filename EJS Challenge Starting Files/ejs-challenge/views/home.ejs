<%- include("partials/header") -%>
<h1>Home</h1>
<p><%=startingContent%></p>

<% posts.forEach(function(post){ %>
  <h2><%=post.title%></h2>
  <% if (post.content.length <= 100) { %>
    <p><%=post.content%></p>
  <% } %>
  <p><%=post.content.substring(0, 100)+'...'%><a href="/posts/<%=post.title.replace(" ","-").toLowerCase()%>">Read More</a></p>
<% }); %>

<%- include("partials/footer") -%>
